<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:padding="1sp"
        android:layout_margin="1sp"
        android:id="@+id/item_logo_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textAppearance="@color/bt_black"
        android:padding="2sp"
        android:textSize="@dimen/abc_text_size_title_material"
        android:id="@+id/item_name_text"
        android:gravity="center"
        android:layout_toRightOf="@+id/item_logo_image"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="description"
        android:padding="2sp"
        android:id="@+id/item_desc_text"
        android:gravity="left"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_toRightOf="@+id/item_logo_image"
        android:layout_below="@+id/item_name_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_price_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="2sp"
        android:gravity="right"
        android:text="Rs.550.00"
        android:textSize="@dimen/abc_text_size_title_material"
        android:layout_toRightOf="@+id/item_name_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_quantity"
        android:text="Quantity:1"
        android:padding="2sp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/item_logo_image"
        android:layout_below="@+id/item_desc_text"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:padding="2sp"
        android:id="@+id/item_remove_icon"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_price_text"
        android:layout_toRightOf="@+id/item_desc_text"/>

</RelativeLayout>